{
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.json"
    }
  },
  "transform": {
    "^.+\\.(ts|tsx)?$": "ts-jest"
  },
  "moduleNameMapper": {
    "^#/(.+)": "<rootDir>/src/$1"
  },
  "moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
  "verbose": true,
  "automock": true,
  "testEnvironment": "node",
  "coverageDirectory": "./coverage/",
  "testMatch": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"]
}
