{
  "compilerOptions": {
    "baseUrl": "./src/",
    "sourceMap": true,
    "target": "es2018",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "paths": {
      "#/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/__tests__/**/*"]
}
